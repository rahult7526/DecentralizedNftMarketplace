# NFT Marketplace Production Environment Variables
# Copy this file to .env.production and fill in your production values

# Blockchain Network Configuration
NEXT_PUBLIC_CHAIN_ID="11155111"  # Sepolia testnet (use "1" for mainnet)
NEXT_PUBLIC_NETWORK_NAME="sepolia"

# Smart Contract Addresses (from deployment output)
NEXT_PUBLIC_NFT_CONTRACT_ADDRESS="0x..."  # Replace with deployed DeNftToken address
NEXT_PUBLIC_MARKETPLACE_CONTRACT_ADDRESS="0x..."  # Replace with deployed NFTMarketplace address

# Alchemy API Configuration
NEXT_PUBLIC_ALCHEMY_API_KEY="your_alchemy_api_key_here"

# Pinata IPFS Configuration
NEXT_PUBLIC_PINATA_API_KEY="your_pinata_api_key_here"
NEXT_PUBLIC_PINATA_SECRET_API_KEY="your_pinata_secret_key_here"
NEXT_PUBLIC_PINATA_GATEWAY="https://gateway.pinata.cloud/ipfs/"

# Supabase Configuration (for event indexer)
NEXT_PUBLIC_SUPABASE_URL="https://your-project.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your_supabase_anon_key"
SUPABASE_SERVICE_ROLE_KEY="your_supabase_service_role_key"

# Optional: Additional Configuration
# NEXT_PUBLIC_APP_NAME="DeNft Marketplace"
# NEXT_PUBLIC_APP_DESCRIPTION="Decentralized NFT Marketplace"
# NEXT_PUBLIC_CONTACT_EMAIL="support@yourmarketplace.com"